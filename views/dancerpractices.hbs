<h2>Dancer's Practices</h2>

<table class="styled-table">
  <tr><th>Mandatory?</th><th>First Name</th><th>Last Name</th><th>Practice Date</th><th>Actions</th></tr>
  {{#each dancer_practices}}
  <tr>
    <td>{{this.mandatory}}</td>
    <td>{{this.firstName}}</td>
    <td>{{this.lastName}}</td>
    <td>{{this.practiceDate}}</td>
    <td>
      <form action="/locations/{{this.dancerPracticeID}}/edit" method="get" style="display:inline;">
        <button type="submit" class="btn-edit">Edit</button>
      </form>

      <form action="/locations/{{this.dancerPracticeID}}/delete" method="post" style="display:inline;">
        <button type="submit" class="btn-delete">Delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
</table>

<h3>Add New Location</h3>
<label for="name">Name:</label>
<input type="text" id="name" name="name" required>
<label for="address">Address:</label>
<input type="text" id="address" name="address" required>
<button id="addLocationBtn">Add Location</button>

